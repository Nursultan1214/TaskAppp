<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/boardFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="space.abdilazov.taskappp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="space.abdilazov.taskappp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="space.abdilazov.taskappp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="space.abdilazov.taskappp.NewsFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/addFragment"
        android:name="space.abdilazov.taskappp.ui.addFragment.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" />
    <fragment
        android:id="@+id/boardFragment"
        android:name="space.abdilazov.taskappp.ui.onBoard.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" />

</navigation>